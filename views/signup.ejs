<%- include("includes/_header") %>

<% if (error) { %>
  <div class="alert"><strong>Error:</strong> <%= error %></div>
<% } %>

<!--Navigation Bar-->
<header>
  <%- include("includes/_navbar") %>
</header>

    <div class="signupBox">
      <h1>Sign-Up</h1>
      <!--Temporary action: go to adminIndex. Will change later once DB is up...-->
      <form action="/adminIndex" method="post" onsubmit="return validateForm()">
        <label for="email">Email:</label>
        <input type="text" id="email" name="email" /><br /><br />
        <span id="emailError" class="error"></span><br/><br/>

        <label for="password">Password:</label>
        <input type="password" id="password" name="password" /><br /><br />
        <span id="passwordError" class="error"></span><br/><br/>

        <label for="password">Confirm Password:</label>
        <input
          type="password"
          id="confirmPass"
          name="confirmPass"
        /><br /><br />
        <span id="confirmPasswordError" class="error"></span><br/><br/>

        <label for="fname">First name:</label>
        <input type="text" id="fname" name="fname" /><br /><br /><br/><br/>
        <label for="lname">Last name:</label>
        <input type="text" id="lname" name="lname" /><br /><br /><br/><br/>
        <button type="submit">Submit</button>
      </form>
    </div>
  <script src="/assets/js/signup.js"></script>

